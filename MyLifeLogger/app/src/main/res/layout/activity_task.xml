<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.jongmin.mylifelogger.TaskActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="이벤트 종류 :"
        android:id="@+id/textView2"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="공부"
        android:id="@+id/stdbtn"
        android:layout_below="@+id/textView2"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="강의"
        android:id="@+id/clsbtn"
        android:layout_below="@+id/textView2"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="취미"
        android:id="@+id/chibtn"
        android:layout_below="@+id/textView2"
        android:layout_alignStart="@+id/endevt" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="친목"
        android:id="@+id/frdbtn"
        android:layout_below="@+id/stdbtn"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="게임"
        android:id="@+id/gambtn"
        android:layout_below="@+id/clsbtn"
        android:layout_alignStart="@+id/clsbtn" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="걷기"
        android:id="@+id/wakbtn"
        android:layout_alignTop="@+id/gambtn"
        android:layout_alignStart="@+id/chibtn" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="이벤트 시작"
        android:id="@+id/startevt"
        android:layout_centerVertical="true"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="이벤트 종료"
        android:id="@+id/endevt"
        android:layout_centerVertical="true"
        android:layout_alignParentEnd="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="이벤트 시작을 눌러 시작시키고 해당 이벤트가 끝났다면 이벤트 종료를 눌러주세요."
        android:id="@+id/textView3"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="79dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/startevt"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="40dp"
        android:id="@+id/textView12" />
</RelativeLayout>